<Window x:Class="DiningRoomApp.WindowHelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiningRoomApp"
        mc:Ignorable="d"
        Title="Справка" Height="450" Width="400"
        ResizeMode="NoResize"
        Icon="2082066.png"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Background="LightBlue" Opacity="0.4" Margin="0,0,0,-10" />
        <TextBlock Text="Справка" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"></TextBlock>
        <TextBlock Text="Данная программа предназначена для оформления заказа в столовой, указывания ФИО, логина, пароля, способа доставки, способа оплаты, адреса пользователя и вывод итоговой цены за выбранные товары в столовой" 
                   TextAlignment="Center" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" TextWrapping="Wrap" Width="350"></TextBlock>
        <Button Width="175" FontSize="12" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{DynamicResource ApplyButton}" Margin="0,0,0,60" Click="Button_Click_Close">Закрыть</Button>
    </Grid>
</Window>
